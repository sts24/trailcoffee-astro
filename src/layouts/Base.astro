---
import GlobalHeader from '../components/GlobalHeader.astro';
import GlobalFooter from '../components/GlobalFooter.astro';

import '../styles/tc.scss';

const { title } = Astro.props;

---
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		{ Astro.props.metaDescription &&
		<meta name="description" content={Astro.props.metaDescription}>
		}
		
		<link rel="icon" href="/images/s-favicon.svg" type="image/svg+xml">

		<title>{ title }</title>
	</head>

	<body>
		<div id="site">
			<GlobalHeader />
			<main>
				<slot />
			</main>
			<GlobalFooter />
		</div>
	</body>
</html>
